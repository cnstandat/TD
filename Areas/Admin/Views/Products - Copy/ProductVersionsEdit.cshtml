@model TD.Models.Views.ProductVersionView
@if (Model != null)
{
    <div class="main">
            <div class="breadcrumb">
                <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
                <a href="/admin/products" class="breadcrumb-item">Ứng dụng</a>
                <a href="/admin/products/Edit/@Model.ProductId" class="breadcrumb-item">@Model.ProductName</a>
                <a href="/admin/products/appVersionsEdit?Version=@(Model.Version)&ProductId=@Model.ProductId" class="breadcrumb-item active">@Model.VersionName</a>

            </div>
                <div class="container-fl">
                    @if (Model != null)
                {
                        <form class="form">
                            <h4 class="form-title">
                                Ứng dụng @Model.ProductName phiên bản @Model.VersionName
                            </h4>
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ProductId" value="@Model.ProductId" />
                            <div class="input--sae">
                                @Html.DropDownListFor(x => x.Selected, Model.AllVersions, new { @class = "chosen", count = 1, data_placeholder = "Chọn chức năng" })
                            </div>
                            <div class="input--sae">
                                <i class="fa fa-price-tags fa-fix"></i>
                                <input class="input-text" type="text" name="Price" value="@Model.Price" placeholder="Giá bán" />
                            </div>
                            <div class="input--sae">
                                <i class="fa fa-price-tags fa-fix"></i>
                                <input class="input-text" type="text" name="OldPrice" value="@Model.OldPrice" placeholder="Giá cũ" />
                            </div>
                            <div class="input--sae">
                                <i class="fa fa-award fa-fix"></i>
                                <input class="input-text" type="text" name="Discount" value="@Model.Discount" placeholder="Giảm giá" />
                            </div>

                            <div class="form-btn">
                                <a class="btn submit btn-success" title="Lưu"><i class="fa fa-save"></i>Lưu</a>
                                <a class="btn delete" title="Xóa chức năng" data-src="/admin/products/appVersionsDelete?ProductId=@Model.ProductId&Version=@(Model.Version)">
                                    <i class="fa fa-cross"></i>Xóa
                                </a>
                            </div>
                        </form>
                        <div class="lazy" data-src="/admin/products/VersionFeatureProducts?ProductId=@Model.ProductId&Version=@(Model.Version)"></div>
                    }
                    else
                    {
                        <h4 class="form-title">Không tìm thấy phiên bản ứng dụng</h4>
                    }
                </div>
               
            </div>
}
else
{
    <div class="main">
        <div class="container-fluid">
            <div class="breadcrumb">
                <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
                <a href="/admin/products" class="breadcrumb-item">Ứng dụng</a>
                <a href="/admin/products/Edit" class="breadcrumb-item">Phiên bản</a>
            </div>

            <div class="main-wrap">
                <h4 class="form-title">
                    Không có dữ liệu
                </h4>
            </div>
        </div>
    </div>
}