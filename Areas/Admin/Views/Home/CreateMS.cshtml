<div class="main">

    <div class="breadcrumb">
        <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
        <a href="/Admin/Config" class="breadcrumb-item">Cấu hình</a>
        <a href="/Admin/CreateMS" class="breadcrumb-item active">Thêm mới Gallery</a>

    </div>

    <h4 class="form-title">
        Thêm Gallery
    </h4>
    <form class="form">
        @Html.AntiForgeryToken()

        <input type="hidden" id="ImageData" name="ImageData" value="" />
        <figure class="image-fake" data-width="972" data-height="600" data-upload="1">
            <noscript><img src="/data/img_svg/noavatar.png" width="972" height="600" /></noscript>
        </figure>
        <div class="input--sae">
            <input class="input-text" name="Name" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Title</span>
            </label>
        </div>
        <div class="input--sae">
            <input class="input-text" name="Subtitle" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Subtitle</span>
            </label>
        </div>
        <div class="input--sae">
            <input class="input-text" name="ButtonText" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Nút bấm</span>
            </label>
        </div>
        <div class="input--sae">
            <input class="input-text" name="Link" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Liên kết</span>
            </label>
        </div>
        <div class="input--sae">
            <input class="input-text" name="VideoLink" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Video</span>
            </label>
        </div>
        <div class="form-btn">
            <a class="btn submit btn-success" title="Lưu"><i class="fa fa-save"></i>Lưu</a>
        </div>
    </form>
</div>


