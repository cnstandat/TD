<div class="main">
    <div class="breadcrumb">
        <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
        <a href="/Admin/Config" class="breadcrumb-item">Cấu hình</a>
        <a href="#" class="breadcrumb-item active">Thêm mới trang</a>
    </div>
    <h4 class="form-title">
        Thêm trang
    </h4>
    <form class="form">
        @Html.AntiForgeryToken()
        <div class="input--sae">
            <input class="input-text" name="Id" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Tên</span>
            </label>
        </div>
        <div class="input--sae">

            <input class="input-text" name="Name" />
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Tiêu đề</span>
            </label>
        </div>
        <div>
            <label class="label">
                <i class="fa fa-edit"></i>
                <span class="text">Nội dung</span>
            </label>
            <textarea class="note-editable" name="Content"></textarea>
        </div>


        <div class="form-btn">
            <a class="btn submit btn-success" title="Lưu"><i class="fa fa-save"></i>Lưu</a>
        </div>
    </form>
</div>



