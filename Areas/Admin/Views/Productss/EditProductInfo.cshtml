@model TD.Models.Views.AppInfoView


<div class="main">
   
        <div class="breadcrumb">
            <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
            <a href="/Admin/Apps" class="breadcrumb-item">Sản phẩm</a>
            <a href="/Admin/Apps/Edit/@Model.AppId" class="breadcrumb-item">Cập nhật</a>
            <a href="/Admin/Apps/info/@Model.AppId" class="breadcrumb-item">Thông số</a>
            <a href="/Admin/Apps/EditAppInfo?AppId=@Model.AppId&&AppInfoId=@Model.AppInfoId" class="breadcrumb-item active">Cập nhật</a>
            @using (Html.BeginForm("Index", "Apps", FormMethod.Get, htmlAttributes: new { @class = "search-form" }))
            {
                <input type="text" name="Search" value="@ViewBag.CurrentFilter" class="search-input" placeholder="Tìm kiếm theo tên sản phẩm" />
            }
        </div>
        <div class="more-action">
            <a class="btn" href="/admin/products/info" title="Danh sách thông số">Thông số</a>
        </div>
        
            <form class="form">
                @Html.AntiForgeryToken()
                <input type="hidden" name="AppId" value="@Model.AppId" />

                <div class="form-title">
                    Cập nhật thông số : @Model.AppName
                </div>
                <div>
                    @Html.ListBoxFor(x => x.Selected, Model.AllInfo, new { @class = "chosen", count = 1, data_placeholder = "Chọn thông số" })
                </div>
                <div class="input--sae">
                    <i class="fa fa-edit fa-fix"></i>
                    <input class="input-text" name="Value" placeholder="Giá trị thông số" value="@Model.Value" />
                </div>

                <div class="submit-container">
                    <a class="btn submit btn-success" title="Lưu"><i class="fa fa-save"></i>Lưu</a>
                    <a class="btn delete" title="Xóa" data-src="/admin/products/deleteproductinfo?ProducId=@Model.AppId&&AppInfoId=@Model.AppInfoId">
                        <i class="fa fa-cross"></i>Xóa
                    </a>
                </div>
            </form>
        </div>


