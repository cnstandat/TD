@model TD.Models.Views.AppGalleryView


<div class="main">
   
        <div class="breadcrumb">
            <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
            <a href="/Admin/Apps" class="breadcrumb-item">Sản phẩm</a>
            <a href="/Admin/Apps/Edit/@Model.AppId" class="breadcrumb-item">Cập nhật sản phẩm</a>
            <a href="/Admin/Apps/CreateGallery/@Model.AppId" class="breadcrumb-item active">Thêm mới ảnh sản phẩm</a>
            @using (Html.BeginForm("Index", "Apps", FormMethod.Get, htmlAttributes: new { @class = "search-form" }))
            {
                <input type="text" name="Search" value="@ViewBag.CurrentFilter" class="search-input" placeholder="Tìm kiếm theo tên sản phẩm" />
            }
        </div>
       
            <h4 class="form-title">
                Thêm mới ảnh sản phẩm @Model.AppName
            </h4>
            <form class="form" data-src="/admin/products/createslide">

                <input type="hidden" name="GalleryId" value="@Model.GalleryId" />
                <input type="hidden" name="AppId" value="@Model.AppId" />
                <input type="hidden" id="ImageData" name="ImageData" value="" />
                
                <figure class="image-fake" data-width=@(Model.IsLarge ? "600" : "400") data-height="600" data-upload="1">
                    <noscript><img src="/data/site_svg/noavatar.png" width=@(Model.IsLarge ? "600" : "400") height="600" /></noscript>
                </figure>
                @Html.AntiForgeryToken()
                <div class="submit-container">
                    <a class="btn submit btn-success" title="Lưu"><i class="fa fa-save"></i>Lưu</a>
                    @*<a class="btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-cross"></i>
                    </a>*@
                </div>
            </form>
        </div>


