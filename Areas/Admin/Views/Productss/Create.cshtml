@model TD.Models.Views.AppEditModel

<div class="main">
    
        <div class="breadcrumb">
            <a href="/Admin" class="breadcrumb-item">Bảng điều khiển</a>
            <a href="/Admin/Apps" class="breadcrumb-item">Sản phẩm</a>
            <a href="/Admin/Apps/Create" class="breadcrumb-item active">Thêm mới</a>
            @using (Html.BeginForm("Index", "Apps", FormMethod.Get, htmlAttributes: new { @class = "search-form" }))
            {
                <input type="text" name="Search" value="@ViewBag.Search" class="search-input" placeholder="Tìm kiếm theo tên sản phẩm" />
            }
        </div>
        
            <div class="form-title">
                Thêm mới sản phẩm
            </div>
            <form class="form">
                @Html.AntiForgeryToken()
                <a class="collapse-close">
                    <span class="line"></span>
                </a>

                <div>
                    <div >

                        <div class="input--sae">
                            <i class="fa fa-edit fa-fix"></i>
                            <input class="input-text" name="FullName" placeholder="Sản phẩm" required data-rule-remote="/pub/productcheck" data-rule-minlength="4" />
                        </div>
                    </div>
                    <div >

                        <div class="input--sae">
                            <i class="fa fa-price-tags fa-fix"></i>
                            <input class="input-text number" name="Price" type="text" placeholder="Giá bán" />
                        </div>
                    </div>
                    <div >

                        <div class="input--sae">
                            <textarea name="Content" class="note-editable" required data-rule-minlength="30" placeholder="Giới thiệu sản phẩm"></textarea>
                        </div>
                    </div>
                </div>


                <div >
                    <div>

                        @if (Model != null)
            {
                            <div class="input--sae">
                                @Html.ListBoxFor(m => m.Selected, Model.AllType, new { @class = "chosen", multiple = "multiple" })
                            </div>
                        }
                    </div>
                    <div>
                        <div class="head">
                            Ảnh cỡ lớn
                        </div>
                        <div class="input--sae">

                            <input type="checkbox" class="ck" name="IsLarge" value="@(Model.IsLarge?"true":"false")" />
                            <label class="d-in">Sử dụng ảnh cỡ 600x600</label>
                        </div>
                    </div>
                </div>



                <div class="submit-container">
                    <a class="btn submit btn-success" title="Lưu sản phẩm"><i class="fa fa-save"></i>Lưu</a>
                    @*<a class="btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                            <i class="fa fa-cross"></i>
                        </a>*@
                </div>
            </form>
        </div>

  