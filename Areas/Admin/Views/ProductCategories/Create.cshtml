<div class="collapse collapse-auto-center auto-dispose" id="createAppCategory">
    <div class="collapse-overlay"></div>
    <div class="collapse-body">
        <a class="collapse-close fa fa-cross"></a>
        <form class="form form-sm">
            <h4 class="form-title">
                Nhóm sản phẩm
            </h4>
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" />

            <div class="input--sae">
                <input class="input-text" name="Name" required data-rule-minlength="3" />
                <label class="label">
                    <i class="fa fa-edit"></i>
                    <span class="text">Nhóm sản phẩm</span>
                </label>
            </div>
            <div class="form-btn">
                <a class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    <span class="text">Lưu</span>
                </a>
            </div>
        </form>
    </div>


</div>
