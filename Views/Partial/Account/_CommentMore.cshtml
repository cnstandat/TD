@model IEnumerable<TD.Models.Views.UserCommentView>

@foreach (var item in Model)
{
    <div class="table-row">
        <span class="table-cell">
            @Html.Raw(item.Content)
        </span>
        <span class="table-cell">
            @item.CreatedUtc
        </span>
    </div>
}
@if (ViewBag.Page != null)
{
    <div class="text-center">
        <a data-src="/account/_commentmore/@ViewBag.Page" class="btn btn-info load-on-click">
            <i class="fa fa-menu"></i> Xem thêm
        </a>
    </div>
}












