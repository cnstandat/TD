@model TD.Models.Views.AddPhoneNumberViewModel
@{
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
    ViewBag.Title = "Thêm số điện thoại";
}


@using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal change-pw", role = "form" }))
{
    <div>
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>

        <div >
            <div class="form-group habtn-icon-left form-control-password">
                @Html.PasswordFor(m => m.Number, new { @class = "form-control form-control-lg", @placeholder = "Phone Number" })
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-success center-block">
                <i class="fa fa-checkmark2"></i> Add/Change Phone
            </button>
        </div>
    </div>
}


