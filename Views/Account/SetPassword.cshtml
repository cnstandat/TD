@model TD.Models.Views.SetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
    ViewBag.Title = "Tạo mật khẩu";
}


@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal change-pw", role = "form" }))
{
    <div >
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>

        <div >
            <p class="text-info">
                Bạn đang đăng nhập bằng tài khoản mạng xã hội, tài khoản của bạn chưa có mật khẩu, bạn có thể đặt mật khẩu
                để truy cập trực tiếp bằng tài khoản Website mà không cần thông qua tài khoản mạng xã hội
            </p>
        </div>
        <div >
            <div class="form-group habtn-icon-left form-control-password">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg", @placeholder = "New Password" })
            </div>
        </div>
        <div>
            <div class="form-group habtn-icon-left form-control-password">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", @placeholder = "Confirm Password" })
            </div>
        </div>
        <div >
            <button type="submit" class="btn btn-success center-block">
                <i class="fa fa-checkmark2"></i> Change Password
            </button>
        </div>
    </div>
}
@section Scripts {

}